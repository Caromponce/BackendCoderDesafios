{{#if data}}
<div class="bg-light">
    <h2>Productos:</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td><img class="thumbnail" src="{{this.thumbnail}}" alt=""></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{else}}
<div class='alert alert-danger' role='alert'>
    {{error}}
</div>
{{/if}}