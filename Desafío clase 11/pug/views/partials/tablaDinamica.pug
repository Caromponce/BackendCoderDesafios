if data
    div(class="bg-light")
        h2 Productos:
        table(class="table")
            thead
                tr
                    th(scope="col") Nombre
                    th(scope="col") Precio
                    th(scope="col") Foto
            tbody
                each producto in data
                    tr
                        td= producto.title
                        td= producto.price
                        td 
                            img(class="thumbnail" src= producto.thumbnail alt="")

else
    div(class='alert alert-danger' role='alert')
        error